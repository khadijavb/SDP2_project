with open("C:/Users/ACER PREDATOR/Desktop/test.txt", "r") as f:
    resume = f.read()
with open("C:/Users/ACER PREDATOR/Desktop/test2.txt", "r") as f:
    requirements = f.read()
    
def hamming_distance(s1, s2):
    return sum(ch1 != ch2 for ch1, ch2 in zip(s1, s2))

if len(resume) > len(requirements):
    max_len = len(resume)
    requirements += ' ' * (max_len - len(requirements))
else:
    max_len = len(requirements)
    resume += ' ' * (max_len - len(resume))

distance = hamming_distance(resume, requirements) / max_len
print(f"The normalized Hamming distance between the resume and requirements is: {distance}")
