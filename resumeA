import numpy as np
import pandas as pd
from sklearn.feature_extraction.text import CountVectorizer
from scipy.spatial.distance import cityblock

with open("C:/Users/ACER PREDATOR/Desktop/test.txt", "r") as f:
    resume = f.read()
with open("C:/Users/ACER PREDATOR/Desktop/test2.txt", "r") as f:
    requirements = f.read()

vectorizer = CountVectorizer()

resume_matrix = vectorizer.fit_transform([resume])
requirements_matrix = vectorizer.transform([requirements])
distance = cityblock(resume_matrix.toarray()[0], requirements_matrix.toarray()[0])
print("Manhattan distance:", distance)
